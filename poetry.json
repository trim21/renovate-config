{
  "lockFileMaintenance": {
    "extends": [
      "github>Trim21/renovate-config:monthly"
    ],
    "enabled": true
  },
  "poetry": {
    "enabled": true
  },
  "pip_setup": {
    "enabled": false
  },
  "pip_requirements": {
    "enabled": false
  },
  "pipenv": {
    "enabled": false
  },
  "setup-cfg": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchManagers": [
        "poetry"
      ],
      "semanticCommitType": "build",
      "groupName": "deps-prod",
      "matchDepTypes": [
        "dependencies"
      ],
      "excludePackagePatterns": [
        "^sphinx"
      ],
      "semanticCommitScope": "deps"
    },
    {
      "matchManagers": [
        "poetry"
      ],
      "groupName": "deps-docs",
      "semanticCommitType": "build",
      "semanticCommitScope": "docs",
      "matchDepTypes": [
        "dependencies"
      ],
      "matchPackagePrefixes": [
        "sphinx"
      ]
    },
    {
      "matchManagers": [
        "poetry"
      ],
      "semanticCommitType": "chore",
      "groupName": "deps-dev",
      "matchDepTypes": [
        "dev-dependencies"
      ],
      "semanticCommitScope": "dev"
    }
  ]
}
