{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "lockFileMaintenance": {
    "semanticCommitType": "build",
    "automerge": true,
    "enabled": true
  },
  "packageRules": [
    {
      "matchDatasources": [
        "golang-version"
      ],
      "separateMinorPatch": true,
      "rangeStrategy": "bump"
    },
    {
      "matchDatasources": [
        "golang-version"
      ],
      "matchCurrentVersion": "1.23.*",
      "minor": {
        "enabled": false
      }
    },
    {
      "separateMinorPatch": true,
      "matchPackageNames": [
        "go"
      ],
      "matchDepTypes": [
        "toolchain"
      ]
    }
  ]
}
