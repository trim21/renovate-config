{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "postUpdateOptions": ["gomodTidy", "gomodUpdateImportPaths"],
  "lockFileMaintenance": {
    "semanticCommitType": "build",
    "automerge": true,
    "enabled": true
  },
  "packageRules": [
    {
      "matchDatasources": [
        "golang-version"
      ],
      "separateMinorPatch": true,
      "rangeStrategy": "bump"
    },
    {
      "separateMinorPatch": true,
      "matchPackageNames": ["go"],
      "matchDepTypes": ["toolchain"]
    }
  ]
}
