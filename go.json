{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "postUpdateOptions": ["gomodTidy", "gomodUpdateImportPaths"],
  "lockFileMaintenance": {
    "semanticCommitType": "build",
    "automerge": true,
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "semanticCommitType": "build"
    }
  ]
}
