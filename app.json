{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rangeStrategy": "pin",
  "lockFileMaintenance": {
    "enabled": true
  },
  "pin": {
    "automerge": true
  },
  "updatePinnedDependencies": true,
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchDatasources": ["golang-version"],
      "separateMinorPatch": true,
      "rangeStrategy": "bump"
    },
    {
      "matchManagers": ["gomod"],
      "matchDatasources": ["golang-version"],
      "matchCurrentVersion": "1.23",
      "matchUpdateTypes": ["minor"],
      "enabled": false
    }
  ]
}
