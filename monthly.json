{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": ["* * 7 * *"],
  "lockFileMaintenance": {
    "schedule": ["* * * * 3"]
  },
  "timezone": "Asia/Shanghai",
  "packageRules": [
    {
      "matchUpdateTypes": ["pin", "pinDigest"],
      "schedule": ["* * * * *"]
    },
    {
      "matchUpdateTypes": "lockFileMaintenance",
      "automergeSchedule": ["* * * * 4"]
    }
  ]
}
