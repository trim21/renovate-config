{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": ["* * 6 * *"],
  "lockFileMaintenance": {
    "schedule": ["* * 1,9,17,25 * *"]
  },
  "timezone": "Asia/Shanghai",
  "packageRules": [
    {
      "matchUpdateTypes": ["pin", "pinDigest"],
      "schedule": ["* * * * *"]
    },
    {
      "matchUpdateTypes": "lockFileMaintenance",
      "automergeSchedule": ["* * 2,10,18,26 * *"]
    }
  ]
}
