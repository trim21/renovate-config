{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": ["* * 3 * *"],
  "lockFileMaintenance": {
    "schedule": ["* * 1,9,17,25 * *"]
  },
  "timezone": "Asia/Shanghai",
  "packageRules": [
    {
      "matchUpdateTypes": ["pin", "pinDigest"],
      "schedule": ["* * * * *"]
    },
    {
      "matchUpdateTypes": "lockFileMaintenance",
      "automergeSchedule": ["* * 2,10,18,26 * *"]
    },
    {
      "matchUpdateTypes": [
        "major",
        "replacement",
        "rollback",
        "bump",
        "digest",
        "minor",
        "patch",
        "pin",
        "pinDigest"
      ],
      "automergeSchedule": ["* * 4,5,6,7,8 * *"]
    }
  ]
}
