{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "lockFileMaintenance": {
    "semanticCommitType": "build",
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile"
      ],
      "matchPackageNames": [
        "node"
      ],
      "enabled": false
    },
    {
      "matchDepTypes": [
        "engines"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "npm"
      ],
      "semanticCommitType": "build"
    },
    {
      "groupName": "eslint",
      "matchPackagePrefixes": [
        "@typescript-eslint/",
        "eslint"
      ],
      "semanticCommitType": "style"
    },
    {
      "matchPackageNames": [
        "lint-staged",
        "husky",
        "prettier"
      ],
      "matchPackagePrefixes": [
        "prettier"
      ],
      "semanticCommitType": "style"
    },
    {
      "groupName": "test-deps",
      "matchPackageNames": [
        "vitest"
      ],
      "matchPackagePrefixes": [
        "@vitest/"
      ],
      "semanticCommitScope": "deps",
      "semanticCommitType": "tests"
    },
    {
      "groupName": "deps",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest",
        "pin",
        "pinDigest"
      ],
      "matchDepTypes": [
        "dependencies"
      ]
    },
    {
      "groupName": "deps",
      "semanticCommitType": "chore",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest",
        "pin",
        "pinDigest"
      ],
      "matchDepTypes": [
        "devDependencies"
      ]
    }
  ]
}
