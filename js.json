{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "lockFileMaintenance": {
    "schedule": [
      "before 16:00 on the 20th day of the month"
    ],
    "enabled": true
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "engines"
      ],
      "enabled": false
    },
    {
      "matchManagers": ["npm"],
      "semanticCommitType": "build"
    },
    {
      "groupName": "eslint",
      "matchPackagePrefixes": ["@typescript-eslint/", "eslint"],
      "semanticCommitType": "style"
    },
    {
      "groupName": "deps",
      "matchDepTypes": [
        "dependencies",
        "devDependencies"
      ]
    }
  ]
}
