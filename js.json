{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "lockFileMaintenance": {
    "semanticCommitType": "build",
    "enabled": true
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "engines"
      ],
      "enabled": false
    },
    {
      "matchManagers": ["npm"],
      "semanticCommitType": "build"
    },
    {
      "groupName": "eslint",
      "matchPackagePrefixes": ["@typescript-eslint/", "eslint"],
      "matchPackageNames": ["lint-staged", "husky", "prettier"],
      "semanticCommitType": "style"
    },
    {
      "groupName": "deps",
      "matchDepTypes": [
        "dependencies",
        "devDependencies"
      ]
    }
  ]
}
