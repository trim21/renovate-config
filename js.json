{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "lockFileMaintenance": {
    "semanticCommitType": "build",
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile"
      ],
      "matchPackageNames": [
        "node"
      ],
      "enabled": false
    },
    {
      "matchDepTypes": [
        "engines"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "npm"
      ],
      "prConcurrentLimit": 2,
      "semanticCommitType": "build"
    },
    {
      "groupName": "dev-deps",
      "semanticCommitScope": "deps",
      "semanticCommitType": "chore",
      "matchDepTypes": [
        "devDependencies"
      ]
    },
    {
      "groupName": "eslint",
      "matchPackagePrefixes": [
        "@typescript-eslint/",
        "eslint-plugin-",
        "eslint"
      ],
      "semanticCommitScope": "deps",
      "semanticCommitType": "style"
    },
    {
      "groupName": "formatter deps",
      "matchPackageNames": [
        "prettier"
      ],
      "matchPackagePrefixes": [
        "prettier"
      ],
      "semanticCommitScope": "deps",
      "semanticCommitType": "style"
    },
    {
      "groupName": "vitest",
      "matchPackageNames": [
        "vitest"
      ],
      "matchPackagePrefixes": [
        "vitest-",
        "@vitest/"
      ],
      "semanticCommitScope": "deps",
      "semanticCommitType": "tests"
    },
    {
      "groupName": "jest",
      "matchPackageNames": [
        "ts-jest",
        "jest"
      ],
      "matchPackagePrefixes": [
        "jest-",
        "@jest/"
      ],
      "semanticCommitScope": "deps",
      "semanticCommitType": "tests"
    },
    {
      "groupName": "rollup",
      "matchPackageNames": [
        "rollup"
      ],
      "matchPackagePrefixes": [
        "rollup-",
        "@rollup/"
      ],
      "semanticCommitScope": "deps",
      "semanticCommitType": "build"
    },
    {
      "groupName": "esbuild",
      "matchPackageNames": [
        "esbuild"
      ],
      "matchPackagePrefixes": [
        "esbuild-",
        "@esbuild-kit/",
        "@esbuild/"
      ],
      "semanticCommitScope": "deps",
      "semanticCommitType": "build"
    },
    {
      "semanticCommitScope": "deps",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest",
        "pin",
        "pinDigest"
      ],
      "matchDepTypes": [
        "dependencies"
      ]
    }
  ]
}
