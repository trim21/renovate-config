{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard"
  ],
  "prHourlyLimit": 0,
  "assignees": [
    "@trim21"
  ],
  "recreateClosed": true,
  "timezone": "Asia/Shanghai",
  "semanticCommits": "enabled",
  "labels": [
    "dependencies"
  ],
  "separateMinorPatch": false,
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "semanticCommitScope": "",
      "semanticCommitType": "ci"
    }
  ]
}
