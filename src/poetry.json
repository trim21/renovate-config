{
  "poetry": {
    "enabled": true
  },
  "pip_setup": {
    "enabled": false
  },
  "pip_requirements": {
    "enabled": false
  },
  "pipenv": {
    "enabled": false
  },
  "packageRules": [
    {
      "managers": [
        "poetry"
      ],
      "groupName": "deps-prod",
      "depTypeList": [
        "dependencies"
      ],
      "excludePackagePatterns": [
        "^sphinx"
      ],
      "semanticCommitScope": "deps"
    },
    {
      "managers": [
        "poetry"
      ],
      "extends": [
        ":semanticCommitTypeAll(chore)"
      ],
      "groupName": "deps-dev",
      "depTypeList": [
        "dev-dependencies"
      ],
      "semanticCommitScope": "dev"
    }
  ]
}
